create or replace task AOG_Orch_Simulation_Daily
    warehouse = INVENTORYMODEL_WH
    as begin

call inventorysandbox.testing.Step_1B_RFPGen_Simulation_Daily();
call inventorysandbox.testing.Step_2_RFPGen_Simulation_Daily();
execute task Step_2B_RFPGen_Simulation_Daily;

END;

create or replace task inventorysandbox.testing.AOG_Orch_Simulation_B_Daily
    warehouse = INVENTORYMODEL_WH
    as begin
    
